<!--index.wxml-->
<view class="container">
  <view  bindtap="bindLogViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  
  <view  bindtap="bindCatViewTap" class="cat">
    <text>{{cat.name}}</text>
  </view>

  <view bindtap="bindViewTap" data-page-name="ico">
    <text>ico demo</text>
  </view>
  <view bindtap="bindViewTap" data-page-name="for">
    <text>For demo</text>
  </view>  
  <view bindtap="bindViewTap" data-page-name="logs">
    <text>查看日志</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
